{
   "env": {
      "node": true,
      "commonjs": true,
      "es2021": true
   },
   "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
   ],
   "parser": "@typescript-eslint/parser",
   "parserOptions": {
      "ecmaVersion": "latest"
   },
   "plugins": [
      "@typescript-eslint"
   ],
   "rules": {
      "@typescript-eslint/no-var-requires": "off",
      "indent": [
         "error",
         3
      ],
      "linebreak-style": [
         "error",
         "windows"
      ],
      "quotes": [
         "error",
         "single"
      ],
      "semi": [
         "error",
         "never"
      ],
      "no-var": "error"
   }
}